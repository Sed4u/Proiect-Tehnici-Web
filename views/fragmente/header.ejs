                        <li><a href="/produse?tip=<%= opt.unnest %>"><%= opt.unnest %></a></li>
                        <% }  %>
                    </ol>
                </li>
                <li class="butoaneprincipale">
                    <a href="/seturi">Seturi</a>
                </li>
                <li class="butoaneprincipale">
                    <a href="/despre">Despre</a>
