<header>
    <div class="header-top">
        <img class="banner" src="/resurse/imagini/logo/logo.png" alt="[logo]">
        <img src="/resurse/imagini/logo/logonobg.png" width="100" height="100" usemap="#logomap" alt="[logo]">
