                    <a href="/">
                        <span id="iconcasa"><i class="fa-solid fa-house fa-sm"></i></span>
                    </a>
                    <a href="/" id="butonacasa">Acasa</a>
                </li>
                <li class="butoaneprincipale">
                    <a href="/produse">Produse proaspete</a>
                    <ol class="items">
                        <!-- <li><a href="/pui">Produse din pui</a></li>
                        <li><a href="/vita">Produse din vita</a></li>
                        <li><a href="/garnituri">Garnituri</a></li>
                        <li><a href="/deserturi">Deserturi</a></li> -->
