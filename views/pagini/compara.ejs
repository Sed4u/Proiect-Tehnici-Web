<!DOCTYPE html>
<html lang="ro">
<head>
    <%- include("../fragmente/head") %>
    <title>Comparare Produse</title>
    <style>
        footer{
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <%- include("../fragmente/header") %>
    <main class="container mt-4">
        <h2 class="text-center mb-4">Comparare Produse</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text table-dark"> 
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Caracteristica</th>
                        <th scope="col"><%= produse[0].nume %></th>
                        <th scope="col"><%= produse[1].nume %></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="table-primary"><th scope="row">Pret</th><td><%= produse[0].pret %></td><td><%= produse[1].pret %></td></tr>
                    <tr class="table-secondary"><th scope="row">Descriere</th><td><%= produse[0].descriere %></td><td><%= produse[1].descriere %></td></tr>
                    <tr class="table-primary"><th scope="row">Tip</th><td><%= produse[0].tip %></td><td><%= produse[1].tip %></td></tr>
                    <tr class="table-secondary"><th scope="row">Subcategorie</th><td><%= produse[0].subcategorie %></td><td><%= produse[1].subcategorie %></td></tr>
                    <tr class="table-primary"><th scope="row">Gramaj</th><td><%= produse[0].gramaj %></td><td><%= produse[1].gramaj %></td></tr>
                    <tr class="table-secondary"><th scope="row">Calorii</th><td><%= produse[0].calorii%></td><td><%= produse[1].calorii %></td></tr>
                    <tr class="table-primary"><th scope="row">Ingrediente</th><td><%= produse[0].ingrediente %></td><td><%= produse[1].ingrediente %></td></tr>
                    <tr class="table-secondary"><th scope="row">Disponibilitate</th><td><%= produse[0].disponibil  ? "Da" : "Nu" %></td><td><%= produse[1].disponibil  ? "Da" : "Nu" %></td></tr>
                </tbody>
            </table>
        </div>
    </main>
    <%- include("../fragmente/footer") %>
</body>
</html>